<div class="row login-row">
	<div class="col-sm-4 col-sm-offset-4">
		<div class="panel panel-default" id="login-panel">
			<div class="panel-heading">
				<h3 class="panel-title">Log in to Fritter</h3>
			</div>
			<div class="panel-body">
                <form>
					<div>
						<div class="login-group">
							<div class="form-group">
								<input type="text" class="form-control" id="login-username" placeholder="Username">
							</div>
							<div class="form-group">
								<input type="password" class="form-control" id="login-password" placeholder="Password">
							</div>
						</div>
						<button id="login-submit-btn" class="btn btn-primary">Log in</button>
					</div>
					<div class="switch-login-signup">
						Don't have an account? <a href="#" id="signup-page-btn">Sign up</a>
					</div>
				</form>
            </div>
		</div>
		<div class="error-msg"></div>
	</div>
</div>